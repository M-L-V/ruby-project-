
<h1> Books </h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th>Author </th>
    <th></th>
    <th>Description </th>
    <th></th>
    <th>Stock Quantity </th>
    <th></th>
    <th>Buying Cost </th>
    <th></th>
    <th>Selling Price </th>
  </tr>
  <% for book in @books%>
  <tr>
    <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
    <td></td>
    <td><%= book.author %></td>
    <td></td>
    <td><%= book.description %></td>
    <td></td>
    <% if book.stock_quantity > 50 %>
    <td><%= book.stock_quantity %></td>
    <% elsif book.stock_quantity == 0 %>
    <td><font color="#ff0000">OUT OF STOCK</font></td>
    <% else %>
    <td><font color="#ffa500"><%= book.stock_quantity %></font></td>
    <% end %>
    <td></td>
    <td><%= book.buying_cost %></td>
    <td></td>
    <td><%= book.selling_price %></td>
    <td></td>


  </tr>






  <% end %>

<p><a href="/books/new">Add New Book</a></p>

</table>
