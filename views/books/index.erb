
<h1 class="page-name">Books</h1>

<!-- <table bgcolor="lemonchiffon"> -->
<table class="publisher-info-table" bgcolor="lemonchiffon">
  <tr>
    <th>Title</th>
    <th></th>
    <th>Author</th>
    <th></th>
    <th>Description</th>
    <th></th>
    <th>Stock Quantity</th>
    <th></th>
    <th>Cost </th>
    <th></th>
    <th>Price</th>
    <th></th>
    <th>Publisher</th>
  </tr>

  <% for book in @books%>
  <tr>
    <ol>
    <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
    <td></td>
    <td><%= book.author %></td>
    <td></td>
    <td><%= book.description %></td>
    <td></td>
    <% if book.stock_quantity > 50 %>
    <td><%= book.stock_quantity %></td>
    <% elsif book.stock_quantity == 0 %>
    <td><font color="#ff0000">OUT OF STOCK</font></td>
    <% else %>
    <td><font color="#ffa500"><%= book.stock_quantity %></font></td>
    <% end %>
    <td></td>
    <td><%= book.buying_cost %></td>
    <td></td>
    <td><%= book.selling_price %></td>
    <td></td>
    <% @publisher = Publisher.find(book.publisher_id) %>
    <td><a href="/publishers/<%= @publisher.id %>"><%= @publisher.name %></a></td>
    </ol>


  </tr>



  <% end %>


  <p><a href="/books/new" class="add-new-button">Add New Book</a></p>


</table>
