<form method="post" action="/publishers/<%= @publisher.id %>">

  <label for="name-field">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @publisher.name %>"
  />

  <label for="contact_details-field">Contact Details:</label>
  <input
  type="text"
  name="contact_details"
  id="contact_details-field"
  value="<%= @publisher.contact_details %>"
  />

  <input type='submit' value="Edit Publisher">
</form>
